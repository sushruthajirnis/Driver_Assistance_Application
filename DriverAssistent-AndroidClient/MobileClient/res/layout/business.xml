<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/android1">

    <Button
        android:id="@+id/gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick= "getDirection"
        android:text="Get Directions" />

    <ImageView
        android:id="@+id/imagenew"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imagenew"
        android:layout_marginTop="18dp"
        android:text="Name: " 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="Address: "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/imagenew"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/review1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/gd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Phone: "
        android:textColor="#000000" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:layout_below="@+id/textView3"
        android:text="Distance: "
        android:textColor="#000000" />
  
  <!--  -->
    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/name1"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address1"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address1"
        android:layout_below="@+id/phone1"
        android:layout_centerVertical="true"
        android:text="TextView" 
        android:textColor="#000000"/>
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:layout_below="@+id/textView4"
       	android:layout_marginTop="10dip"
        android:text="Rating: "
        android:textColor="#000000" />
  
    <ImageView
        android:id="@+id/ratingimagenew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address1"
        android:layout_centerVertical="true"
        android:layout_below="@+id/dist"
        android:layout_marginTop="16dp" />
    
</RelativeLayout>